<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reminder" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>

    </style>
    <!-- http://stackoverflow.com/questions/28738089/change-datepicker-dialog-color-for-android-5-0  -->
    <style name="AppBaseTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="headerLayout">@color/white</item>
        <item name="materialAlertDialogBodyTextStyle">@android:color/holo_blue_bright</item>
        <item name="materialCalendarHeaderSelection">@style/TextAppearance.AppCompat.Title.</item>
        <item name="materialCalendarHeaderTitle">@style/MaterialAlertDialog.MaterialComponents</item>
        <item name="materialCalendarHeaderToggleButton">@style/MaterialAlertDialog.MaterialComponents</item>
        <item name="materialCalendarHeaderLayout">@color/white</item>


    </style>

    <style name="TextAppearance.AppCompat.Title." parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/amaranth</item>

    </style>
    <style name="MaterialAlertDialog.MaterialComponents" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/amaranth</item>
    </style>







